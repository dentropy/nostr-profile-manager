{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier",
    "tslint-plugin-prettier"
  ],
  "rules": {
    "prettier": [true, {
      "printWidth": 80,
      "singleAttributePerLine": true
    }],
    "jsx-alignment": true,
    "jsx-no-multiline-js": false,
    "jsx-wrap-multiline": true,
    "max-line-length": [true, 80]
  }
}